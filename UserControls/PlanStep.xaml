<UserControl x:Class="WorkoutGenerator.UserControls.PlanStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkoutGenerator.UserControls"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding NumberInList}"/>
            <Label Content="{Binding Exercise.Name}"/>
            <Label Content="{Binding Exercise.BodyPart}"/>
            <Label Content="{Binding Exercise.TargetArea}"/>
            <Label Content="{Binding Exercise.Type}"/>
            <Label Content="{Binding Exercise.Sets}"/>
            <Button Content="Remove"/>
        </StackPanel>
    </Grid>
</UserControl>
